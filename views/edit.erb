<form action="/memos/<%= @memo[:id] %>" method="POST">
  <div>
    <input type="text" name="title" value="<%== @memo[:title] %>">
  </div>
  <div>
    <textarea name="content" cols="30" rows="10"><%== @memo[:content] %></textarea>
  </div>
  <button>変更</button>
  <input type="hidden" name="_method" value="PATCH">
</form>
